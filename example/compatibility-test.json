{
  "version": "v1alpha1",
  "compatibilities": [
    {
      "tag": "debian:11",
      "description": "Match flavor vanilla to a debian image",
      "rules": [
        {
          "matchFeatures": [
            {
              "matchExpressions": [
                {
                  "op": "In",
                  "key": "feature.node.ocifit-k8s.flavor",
                  "value": [
                    "vanilla"
                  ]
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "tag": "ubuntu:24.04",
      "description": "Match flavor chocolate to an ubuntu image",
      "rules": [
        {
          "matchFeatures": [
            {
              "matchExpressions": [
                {
                  "op": "In",
                  "key": "feature.node.ocifit-k8s.flavor",
                  "value": [
                    "chocolate"
                  ]
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "tag": "rockylinux:9",
      "description": "Match flavor strawberry to a rockylinux image",
      "rules": [
        {
          "matchFeatures": [
            {
              "matchExpressions": [
                {
                  "op": "In",
                  "key": "feature.node.ocifit-k8s.flavor",
                  "value": [
                    "strawberry"
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}